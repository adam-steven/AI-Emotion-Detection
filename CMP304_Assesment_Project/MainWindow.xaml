<Window x:Class="CMP304_Assesment_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMP304_Assesment_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-16">
        <Rectangle Margin="40,30,40,95" Fill="Black" IsEnabled="False" />
        <Rectangle Margin="45,35,45,100" Fill="White" />
        <Label x:Name="dragAndDropLbl" Content="DRAG AND DROP IMAGES" HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <ListBox x:Name="DropTargetlst" Margin="55,86,55,105
                 " AllowDrop="True" DragEnter="DropTargetlst_DragEnter" DragDrop.Drop="DropTargetlst_DragDrop" BorderBrush="Black" BorderThickness="2,2,2,2" Visibility="Visible"/>
        <Button x:Name="processBtn" Content="PROCESS" Margin="120,360,420,0" Height="35" VerticalAlignment="Top" Click="processBtn_Click"/>
        <Button x:Name="clearBtn" Content="CLEAR" HorizontalAlignment="Left" Height="35" Margin="420,360,0,0" VerticalAlignment="Top" Width="260" Click="clearBtn_Click"/>

    </Grid>
</Window>

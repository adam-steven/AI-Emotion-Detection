<Window x:Class="CMP304_Assesment_Project.Pridictions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMP304_Assesment_Project"
        mc:Ignorable="d"
        Title="Pridictions" Height="450" Width="800">
    <Grid Loaded="Pridictions_Loaded">
        <Image x:Name="image" HorizontalAlignment="Center" Height="315" Margin="0,20,0,0" VerticalAlignment="Top" Width="642" Stretch="Uniform" StretchDirection="Both" />
        <Button x:Name="leftBtn" Content="&lt;" HorizontalAlignment="Left" Margin="60,20,0,0" VerticalAlignment="Top" Click="leftBtn_Click" Height="315" Width="40"/>
        <Button x:Name="rightBtn" Content="&gt;" HorizontalAlignment="Left" Margin="701,20
                ,0,0" VerticalAlignment="Top" Click="rightBtn_Click" Height="315" Width="40"/>
        <Label x:Name="predictionLbl" Content="" HorizontalAlignment="Center" Margin="0,350,0,0" VerticalAlignment="Top" Width="600" BorderBrush="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>

    </Grid>
</Window>
